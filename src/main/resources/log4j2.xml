<?xml version="1.0" encoding="UTF-8"?>
<!--
参见： https://logging.apache.org/log4j/2.x/manual/appenders.html
-->
<Configuration status="INFO" monitorInterval="1" packages="com.gewuwo.logging.appender">
    <Appenders>
        <LogTracker name="logTracker" project="tracker" projectId="tracker" enabled="true" senderClient="tracker-server" sendUrl="http://192.168.1.36:8081/api/log/tracker/error">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] [%-5p] {%F:%L} - %m%n"/>
        </LogTracker>
    </Appenders>

    <Loggers>
        <!-- 设置 Appender ，同时 ROOT 的日志级别为 INFO -->
        <Root level="INFO">
            <AppenderRef ref="logTracker" level="ERROR"/>
        </Root>
    </Loggers>
</Configuration>
